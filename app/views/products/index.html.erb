<!-- http://localhost:3000/admin_users -->

<body>
	<div class="page-header" style="background-color: orange;">
		<h1>サンプル　　<small>サブ・テキスト</small></h1>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-lg-3" style="background-color: orange;">
				<h2>サイドバー</h2>
			</div>
			<div class="col-lg-9">
				<h1 class="page_title">商品一覧</h1>
			        <div class="search">
			          <form action="<%= user_products_path %>" method="get" class="form-inline">
			            <input type="text" id="search__bar" name="s_title" required size="10" placeholder=" 商品名やアーティスト名で検索" value="<%= request[:s_title] %>">
			              <button  class="search__box" type="submit">
			                  <span class="search__box__txt" ><%= image_tag "search.png", alt:"" %> 検索</span>
			              </button>
			          </form>
			        </div>
					<div class="form-group sort">
						<label class="sr-only" for="InputSelect">並び替え</label>
						<select class="form-control" style="width: 70px;" id="InputSelect">
							<option>降順</option>
							<option>昇順</option>
						</select>
					</div>
				<table  class="table table-striped">
					<thead>
						<tr>
							<th>商品ID</th>
							<th>商品名</th>
						</tr>
					</thead>
					<tbody>
					<% @products.each do |product| %>
						<tr>
							<td>
								<%= product.id %>
							</td>
							<td>
								<%= product.product_name %>
							</td>
						</tr>
					<% end %>
					</tbody>
				</table>
				<nav>
				<%= paginate @products, class:"pagenate" %>
				</nav>
			</div>
		</div>
	</div>
</body>