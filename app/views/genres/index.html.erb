<body>
	<div class="page-header" style="background-color: orange;">
		<h1>サンプル　　<small>サブ・テキスト</small></h1>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-lg-3" style="background-color: orange;">
				<h2>サイドバー</h2>
			</div>
			<div class="col-lg-9">
				<h1>ジャンル登録</h1>
				<div class="create">
					<%= form_for(@genre) do |f| %>
						<div class="form-group">
							<%= f.text_field :genre_name, class:"form-genre", :placeholder => "ジャンル名"%>
						</div>
						<%= f.submit "作成",class:"btn btn-default btn-lg" %>
					<% end %>
				</div>
				<table  class="table table-striped">
					<thead>
						<tr>
							<th>全ジャンル</th>
						</tr>
					</thead>
					<tbody>
					<% @genres.each do |genre| %>
						<tr>
							<td>
								<%= genre.genre_name %>
							</td>
							<td>
								<%= link_to "編集", edit_genre_path(genre.id),class: "edit_#{genre.id}" %>
							</td>
						</tr>
					<% end %>
					</tbody>
				</table>
				<nav>
				<%= paginate @genres, class:"pagenate" %>
				</nav>
			</div>
		</div>
	</div>
</body>