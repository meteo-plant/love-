
<header style="width: 100%; height:80px; background-color: pink">
</header>


<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_name %></td>
        <td><%= product.airtist_name %></td>
        <td><%= product.label_name %></td>
        <td><%= product.stock %></td>
      </tr>
    <% end %>
  </tbody>
</table>

