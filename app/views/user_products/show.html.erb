<header style="width: 100%; height:80px; background-color: pink">
</header>

<body class="product_show">
  <div class="container" style="margin-top: 30px;">
    <div class="row">
      <div class="col-lg-3 side_ber" style="height: 800px;"></div>
      <div class="col-lg-9">
     
		<div class="product_show" style="width: 880px; height: 350px; background-color: #ffffff; border: solid 1px #f5f5f5; margin-bottom: 10px;">
		  <div class="container">
		    <div class="row">
		      <div class="col-lg-3 show-image" style="margin: 20px 0px 20px 0px;">
		       <%= image_tag(@product.jaket_image_id)%>
		      </div>
			  <div class="col-sm-4">
		        <ul class="list-inline" style="margin: 10px 0px;">
		          <li><strong class="h3 text-danger">商品名</strong></li>
		          <li class="h4"><%= @product.product_name %></li>
		        </ul>
		        <ul class="list-inline" style="margin: 0;">
		          <li><strong class="h3 text-danger">アーティスト</strong></li>
		          <li class="h4"><%= @product.airtist_name %></li>
		         </ul>
		         <ul class="list-inline" style="margin: 10px 0px;">
		           <li><strong class="h3 text-danger">特典</strong></li>
		           <li class="h4">プレミアムチケット付き</li>
		         </ul>
		         <ul class="list-inline" style="margin: 0;">
		           <li><strong class="h3 text-danger">評価</strong></li>
		           <li></li>
		           <li class="h3"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span><span class="glyphicon glyphicon-heart" aria-hidden="true">  </span><span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
		           </li>
		         </ul>
		         <ul class="list-inline" style="margin: 15px 5px;">
	          	   <li><strong class="h3 text-danger">価格</strong></li>
	          	   <li class="h4 text-danger"><strong class="h3">￥</strong></li>
	          	   <li class="h4 text-danger"><%= @product.price %></li>
			     </ul>
			   </div>
			   <div class="col-sm-2" style="background-color: #FFE4E1; margin-top: 30px;">
			     <li style="list-style: none; margin: 20px 10px 20px -5px;"><button type="button" class="btn btn-warning btn-sm btn-block "><%= link_to "カートに入れる", test_cart_item_path(@product.id), class: "link" %></button></li>
			     <li style="list-style: none; margin: 0px 10px 0px -5px;"><button type="button" class="btn btn-danger btn-sm btn-block"> お気に入り </button></li>
			     <li style="list-style: none; margin-top: 50px;">在庫</li>
			     <li style="list-style: none;"><%= @product.stock %></li>
			   </div>
	       	</div>
	      </div>
	    </div>
	    <div class="comment_area" style="width: 880px; height: 350px; background-color: #ffffff; border: solid 1px #f5f5f5;">
	    	<div class="text-center" style="width: 100%; height: 30px; background-color: #f5f5f5;"><p>ユーザーレビュー</p></div>
	          <div class="form-group">
	          	<%= form_for [@product, @comment], url: product_comments_path(@product, @comment) do |f| %>
		        <div class="col-sm-9">
			       <%= f.text_field :comment, rows:'5', class: "form-control",placeholder: "みんなコメントしてね！！" %>
		        </div>
	       		<label class="col-sm-3 control-label" for="InputTextarea">
		       		<%= f.submit "送信する" %>
		       	</label>
		    	<% end %>
	          </div>
            <div class="example">

               <div class="container">
               	 <% @product.comments.each do |commentf| %>
                 <div class="row">
             	   <div class="col-lg-1" style="margin: 10px 0px 10px 0px;" >
             		 <%= image_tag 'sample-10.jpg', :width =>'70px', :height =>'50px' %>
             		 <p>オタク君</p>
             	   </div>
             	   <div class="col-lg-8"style="margin-top: 20px;">
             	   	<%= commentf.comment %>
             	   </div>
                 </div>
               <% end %>
               </div>
             </div>
	         <div class="user_ranking" style="width: 100%; height: 350px; background-color: #ffffff; border: solid 1px #f5f5f5; padding-top: 10px;">
	           <div class="text-center" style="width: 100%; height: 30px; background-color: #f5f5f5;"><p>購入金額上位ユーザーランキング</p></div>
	           <div>
                  <h3 class="ribbon1">第１位！！</h3>
               </div>
               <div>
                  <h3 class="ribbon2">第２位！！</h3>
               </div>
               <div>
                  <h3 class="ribbon3">第３位！！</h3>
               </div>
	         </div>
	       </div>
        </div>
      </div>
    </div>
  </div>
</body>