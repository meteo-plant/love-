<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

 <div><%= f.label :user_name, "名前　姓、名" %><br />
  <%= f.text_field :user_name %></div>

  <div><%= f.label :user_name_phonetic, "名前　カナ" %><br />
  <%= f.text_field :user_name_phonetic %></div>

  <div><%= f.label :postal_code, "郵便番号" %><br />
  <%= f.text_field :postal_code %></div>

   <div><%= f.label :address, "住所" %><br />
  <%= f.text_field :address %></div>

   <div><%= f.label :phone_number, "電話番号" %><br />
  <%= f.text_field :phone_number %></div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password,"パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
